extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===platform ? '' : platform.name) )
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Genre name' name='description' required='true' value=(undefined===platform ? '' : platform.description) )
      label(for='price') Price:
      input#price.form-control(type='text' placeholder='Price' name='price' required='true' value=(undefined===platform ? '' : platform.price) )
      label(for='stock') Stock:
      input#stock.form-control(type='number' placeholder='Stock' name='stock' required='true' value=(undefined===platform ? '' : platform.stock) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
